#include <DFRobotDFPlayerMini.h>
#include <SoftwareSerial.h>

SoftwareSerial mySerial(10,11);
DFRobotDFPlayerMini myDFPlayer;

void setup(){
  mySerial.begin(9600);
  Serial.begin(9600);

  Serial.print("Inicializando o player...");

  if(!myDFPlayer.begin(mySerial)){
    Serial.println("Erro no player!");
    Serial.println("1. Verifique os fios RX/TX invertidos.");
    Serial.println("2. Confirme se o SD está inserido corretamente.");
    Serial.println("3. Insira outro cartão se possível.");
    while(true);
  }

  Serial.print("DFPlayer iniciado com sucesso!");
  myDFPlayer.volume(20);
  myDFPlayer.play(1);
  Serial.println("Tocando som...");
}

void loop(){}
